@{
    ViewData["Title"] = "School";
}

<link href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&display=swap" rel="stylesheet">

<style>

    body {
        font-family: Fredericka the Great, serif;
        margin: 0;
        padding: 0;
        background-color: #183D3D;
        color: #fff;
    }

    .head {
        color: #fff;
    }

    .head h1 {
        font-family:Fredericka the Great, serif;
        text-align: center;
        margin-top: 50px; 
        background-image: linear-gradient(to right,#FFFFEC,#FAEF9B, #F6D776, #F8E559);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }


    table {
        font-family: "Nanum Pen Script", cursive;
       
        width: 100%;
        border-collapse: collapse;
        margin-top: 70px;
    }

    td {
        border: 1px solid #fff;
        padding: 20px;
        text-align: center;
    }

    th {
        border: 1px solid #fff;
        padding: 5px;
        text-align: center;
        font-family: Fredericka the Great, serif;
        background-image: linear-gradient(to right,#FFFFEC,#FAEF9B, #F6D776, #F8E559);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
</style>
<div class="head">
    <h1>SCHEDULE</h1>
    <table>
        <tr>
            <th rowspan="2">Subject Code</th>
            <th rowspan="2">Subject Title</th>
            <th rowspan="2">Teacher</th>
            <th rowspan="2">Units</th>
            <th colspan="2">Asynchronous</th>
            <th colspan="2">Face to Face </th>
            <th rowspan="2">Section</th>
        </tr>
        <tr>
            <td>Day</td>
            <td>Time</td>
            <td>Day</td>
            <td>Time</td>
        </tr>
        <tr>
            <td>ELEC323</td>
            <td>IT Elective 3</td>
            <td>Prof Alamo</td>
            <td>3</td>
            <td>Thursday</td>
            <td>3:00pm-5:00pm</td>
            <td>Saturday</td>
            <td>10:00am-1:00pm</td>
            <td>BSIT32E2</td>
        </tr>
    </table>
</div>